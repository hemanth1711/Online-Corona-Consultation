@using Online_Consultation
@model IEnumerable<Online_Consultation.Models.DoctorProfile>
@{
    ViewData["Title"] = "DoctorProfile";
}

<div class="row">
    <div class="col-6">
        <h2 style="color:#6f42c1"> 
            Doctor's List
        </h2>
    </div>
     <div class="col-6 text-end">
        <a asp-action="Create" class="btn" style="background-color:#6f42c1;color:white"> &nbsp; Add Doctor</a>
    </div>

    <br />
    <br />
    <div class="col-lg-12 col-md-6">
      <table class=" container table table-striped">
      <tr>
        <th>
            @Html.DisplayNameFor(c => c.Docname)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.speciality)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.email)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.fees)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.avail)
        </th>
        <th></th>
      </tr>
      @foreach(var item in Model)
      {
      <tr>
          <td>
              @item.Docname
          </td>
          <td>
              @item.speciality
          </td>
          <td>
              @item.email
          </td>
          <td>
              @item.fees
          </td>
          <td>
              @item.avail
          </td>
          <td>
       <div class="btn-group" role="group">
  <a asp-action="Edit" asp-controller="Doctors" class="btn btn-success" asp-route-id="@item.id" > Edit  </a>
  <a class="btn btn-warning" asp-action="Details" asp-controller="Doctors" asp-route-id="@item.id">Details</a>
  <a class="btn btn-danger" asp-action="Delete" asp-controller="Doctors" asp-route-id="@item.id"> Delete </a>
</div>
</td>
</tr>
      }
      </table>
      </div>
    </div>

