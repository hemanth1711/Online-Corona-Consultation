@using Online_Consultation
@model Online_Consultation.Models.Employee
@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <h2 style="color:mediumpurple">
        Edit Employee
    </h2>
    <form asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
             <div class="form-group row">
            <div class="col-6">
                <label asp-for="Empname"></label>
            </div>
            <div class="col-6">
                <input asp-for="Empname" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            </div>
            <div class="form-group row">
            <span asp-validation-for="Empname" class="text-danger"></span>
            <br />
             <div class="col-6">
                <label asp-for="DepId"></label>
            </div>
            
            <div class="col-6">
                <input asp-for="DepId" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="DepId" class="text-danger"></span>
            <br />
            </div>           
    
        <div class="form-group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.id"> Edit </a>
            <a asp-action="Index" class="btn btn-success"> Back to List</a>
        </div>
       
       
    </div>
</form>
</div>