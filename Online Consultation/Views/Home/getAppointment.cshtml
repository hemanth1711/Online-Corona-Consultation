@model Online_Consultation.Models.Appointment
@using Online_Consultation.Models
@{
    ViewData["Title"] = "getAppointment";
}

<div class="row">
    <h2 style="color:mediumpurple">
        Appointment details
    </h2>
    <form asp-action="getAppointment" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
             <div class="form-group row">
            <div class="col-6">
                <label asp-for="doctor.Docname"></label>
            </div>
            <div class="col-6">
                <input asp-for="doctor.Docname" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            </div>
            <div class="form-group row">
            <span asp-validation-for="doctor.Docname" class="text-danger"></span>
            <br />
            <div class="col-6">
                <label asp-for="patient.pname"></label>
            </div>
            <div class="col-6">
                <input asp-for="patient.pname" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            </div>
            <div class="form-group row">
            <span asp-validation-for="patient.pname" class="text-danger"></span>
            <br />
             <div class="col-6">
                <label asp-for="doctor.speciality"></label>
            </div>
            <input asp-for = " doctor.docImageUrl" readonly="readonly" type="hidden"/>
            <div class="col-6">
                <input asp-for="doctor.speciality" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="doctor.speciality" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label > Doctor Email</label>
            </div>
            <div class="col-6">
               <input asp-for="doctor.email" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="doctor.email" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label> Patient Email</label>
            </div>
            <div class="col-6">
               <input asp-for="patient.Email" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="patient.Email" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label asp-for="doctor.fees"></label>
            </div>
            <div class="col-6">
                <input asp-for="doctor.fees" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            <span asp-validation-for="doctor.fees" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
             <div class="col-6">
                <label> Slots</label>
            </div>
            <div class="col-6">
                <input asp-for="doctor.avail"disabled hidden/>
                <span style="color:green">
                    Slotes are Available
                </span>
            </div>
            <span asp-validation-for="doctor.avail" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <a class="btn btn-primary" asp-action="ConfirmAppointment" asp-route-id="@Model.doctor.id">Confirm Appointment  </a>
            <a asp-action="Index" asp-controller="Doctors" class="btn btn-success"> Back to All Doctors</a>
        </div>
        </div>
         <div class="col-1">

        </div>
         <div class="col-3">
             <img src="~/@Model.doctor.docImageUrl" width="100%"/>
        </div>
        </div>
            <!--

            <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key="@ViewBag.StripePublishKey"
            data-locale="auto"
            data-description="Sample Charge"
            data-amount="500">
            </script>
            -->  
</form>
</div>

