@using Online_Consultation
@model Online_Consultation.Models.PatientProfile
@{
    ViewData["Title"] = "Profile";
}

<section class="section about-section gray-bg" id="about">
    <form asp-action="Profile" method="post" enctype="multipart/form-data">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <div class="row about-list">
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Name</label>
                                        <input asp-for="pname" class="form-control" id="validationCustom05" required/>

                                    </div>
                                    <div class="media">
                                        <label>Mobile</label>
                                        <input asp-for="Mobile" class="form-control" id="validationCustom05" required/>
                                    </div>
                                    <div class="media">
                                        <label>Residence</label>
                                        <input value="India" class="form-control" id="validationCustom05" required/>
                                    </div>
                                    <div class="media">
                                        <label>Address</label>
                                        <input asp-for="address" class="form-control" id="validationCustom05" required/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>E-mail</label>
                                        <input asp-for="Email"  readonly="readonly" class="form-control" id="validationCustom05" required/>
                                    </div>
                                    <div class="form-group">
            <input class="btn btn-primary" value="Update" type="submit"/>
            <a asp-action="Index" asp-controller="Home" class="btn btn-success"> Back to Home</a>
        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-avatar">
                            <img src="~/@Model.pImageUrl" class="rounded-circle"  width="300px" height="300px" title="" alt="">
                        </div>
                        <br/>
                        <br />
                        <div>
                            <input asp-for="pImage" class="form-control" type="file">
                        </div>
                        <input hidden asp-for="pImageUrl"/>
                        <input hidden asp-for="id"/>
                    </div>
                </div>
            </div>
            </form>
        </section>

