@using Online_Consultation
@model Online_Consultation.Models.Service
@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <h2 style="color:mediumpurple">
        Edit A Service
    </h2>
    <form asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">

             <div class="form-group row">
            <div class="col-6">
                <label asp-for="name"></label>
            </div>
            <div class="col-6">
                <input asp-for="name" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            </div>
            <div class="form-group row">
            <span asp-validation-for="name" class="text-danger"></span>
            <br />
             <div class="form-group row">
             <div class="col-6">
                <label asp-for="serviceDetail"></label>
            </div>
           
            <div class="col-6">
                <input asp-for="serviceDetail" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="serviceDetail" class="text-danger"></span>
            <br />
            </div>
           
           
           
        </div>
        <div class="form-group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.id"> Edit </a>
            <a asp-action="Index" class="btn btn-success"> Back to List</a>
        </div>
        </div>
        </div>
        </form>
        </div>

